{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "src/components/Header.jsx", "src/components/ProgressBar.jsx", "src/app/layout.tsx", "src/app/page.tsx", "src/components/Footer.jsx", "src/app/task/[bookId]/[chapterId]/[taskId]/page.jsx", "src/app/signup/page.jsx", "src/components/ui/animated-list.tsx"],
  "exclude": ["node_modules"]
}
